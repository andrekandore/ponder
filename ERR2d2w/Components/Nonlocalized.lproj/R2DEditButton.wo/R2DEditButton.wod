CanEdit: WOConditional {
	condition = isEditable;
}

EditButton: WOSubmitButton {
	action = editObjectAction;
	value = d2wContext.editButtonLabel;
}

EditLink: WOHyperlink {
	action = editObjectAction;
	string = d2wContext.editButtonLabel;
}

IsButton: WOConditional {
	condition = context.isInForm;
}

IsLink: WOConditional {
	condition = context.isInForm;
	negate = true;
}
