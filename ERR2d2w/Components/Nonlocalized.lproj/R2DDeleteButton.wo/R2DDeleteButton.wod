CanDelete: WOConditional {
	condition = canDelete;
}

DeleteButton: WOSubmitButton {
	action = deleteObjectAction;
	value = d2wContext.deleteButtonLabel;
}

DeleteLink: WOHyperlink {
	action = deleteObjectAction;
	string = d2wContext.deleteButtonLabel;	
}

IsButton: WOConditional {
	condition = context.isInForm;
}

IsLink: WOConditional {
	condition = context.isInForm;
	negate = true;	
}
