IsButton: WOConditional {
	condition = context.isInForm;
}

IsLink: WOConditional {
	condition = context.isInForm;
	negate = true;
}

SelectButton: WOSubmitButton {
	action = selectObjectAction;
	value = d2wContext.pickButtonLabel;
}

SelectLink: WOHyperlink {
	action = selectObjectAction;
	string = d2wContext.pickButtonLabel;
}
